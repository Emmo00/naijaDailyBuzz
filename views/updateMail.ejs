<html>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande',
        'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    a {
      text-decoration: none;
      color: black;
    }

    a:hover {
      border-bottom: 2px solid black;
    }

    .flex-col {
      display: flex;
      flex-direction: column;
    }

    .flex-row {
      display: flex;
      flex-direction: row;
      justify-content: center;
    }

    .image-mid {
      width: 100px;
      height: auto;
    }
  </style>
  <body>
    <h1>NaijaDailyBuzz</h1>
    <h2>Todays Headlines</h2>
    <% for(let article of todayArticles) { %>
    <br />
    <div class="headline-card flex-row">
      <img
        class="image image-mid"
        src="<%=  article.image %>"
        alt="<%= article.title %>"
      />
      <div class="flex-col">
        <h3><a href="<%= process.env.DOMAIN_NAME_URL %>/news/<%= article.title %>"><%= article.title %></a></h3>
        <p>
          <%= article.content.substr(0, 80) + '...' %>
          <a href="<%= process.env.DOMAIN_NAME_URL %>/news/<%= article.title %>">Read more</a>
        </p>
      </div>
    </div>
    <% } %>

    <br>
    <br>
    <br>
    <a href="<%= process.env.DOMAIN_NAME_URL %>/unsubscribe?token=<%= token %>">Unsubscribe</a>
  </body>
</html>
